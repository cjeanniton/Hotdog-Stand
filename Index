<script language="javascript">
			function calctotal(){
				var hotdogs, fries, sodas, total, tax, totalplustax;
				hotdogs = document.getElementById("hotdogs").value;
				fries = document.getElementById("fries").value;
				sodas = document.getElementById("sodas").value;
				
				total = (parseInt(hotdogs) * 3.25) + (parseInt(fries) * 2) + (parseInt(sodas) * 1.5);
				tax = Math.round((total * 0.0625) * 100.0) / 100.0;
				totalplustax = Math.round((total + tax) * 100.0) / 100.0;
				
				if (total >= 20){
					totalplustax = Math.round((totalplustax - (totalplustax * 0.1)) * 100.0) / 100.0;
					alert("You qualify for a 10% discount! Find your total and sales tax below.");
				}else{
					alert("Find your total and sales tax below.");
				}
				
				document.getElementById ("tax").value=tax;
				document.getElementById ("totalplustax").value=totalplustax;
			}
</script>
	
